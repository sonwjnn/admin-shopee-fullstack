<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="apple-touch-icon" sizes="76x76" href="/img/apple-icon.png" />
  <link rel="icon" type="image/png" href="/img/favicon.png" />
  <link rel="stylesheet" href="/css/login.css" />

  <!--     Fonts and icons     -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
  <!-- Nucleo Icons -->
  <link href="/css/nucleo-icons.css" rel="stylesheet" />
  <link href="/css/nucleo-svg.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <!-- CSS Files -->
  <link id="pagestyle" href="/css/soft-ui-dashboard.css?v=1.0.6" rel="stylesheet" />
</head>

<body>
  <main class="main-content mt-0">
    <section class="min-vh-100 mb-8">
      <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('/img/curved-images/curved14.jpg')">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-5 text-center mx-auto">
              <h1 class="text-white mb-2 mt-5">Welcome Back!</h1>
              <p class="text-lead text-white">
                Please log in to use the account's features and attractive
                services.
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row mt-lg-n10 mt-md-n11 mt-n10">
          <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
            <div class="card z-index-0">
              <div class="card-header text-center pt-4 pb-0">
                <h4>Account</h4>
              </div>

              <div class="card-body">
                <form id="LoginForm" role="form text-left">
                  <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Username" aria-label="username" aria-describedby="email-addon" id="username" />
                  </div>

                  <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Password" aria-label="password" aria-describedby="email-addon" id="password" />
                  </div>
                  <!-- <p class="text-sm mt-3 mb-0">
                    Username: adminorigin | password: adminA1!
                  </p> -->

                  <div class="text-center">
                    <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2" id="dangnhap">
                      Log In
                    </button>
                  </div>

                  <p class="text-sm mt-3 mb-0">
                    Do not have an account?
                    <a href="/admin/register" class="text-dark font-weight-bolder">
                      Register</a>
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header alert-info">
          <h5 class="modal-title text-white" id="exampleModalLongTitle">
            <i class="fa fa-flag" aria-hidden="true"></i> Notification
          </h5>
        </div>
        <div class="modal-body center text-black">
          <div class="d-flex">
            <div id="ketqua"></div>
            &nbsp
            <div class="timeout"><span id="s"></span></div>
          </div>
          <div class="center" id="loadding">
            <div class="lds-ring pl-5-loading">
              <div></div>
              <div></div>
              <div></div>
              <div></div>
            </div>
          </div>
        </div>
        <div class="modal-footer" id="close">
          <button type="button" class="btn btn-secondary mt-0 mb-0" data-dismiss="modal">
            Close
          </button>
        </div>
        <br id="br" class="hiden" />
      </div>
    </div>
  </div>
  <button id="noti" type="button" class="btn btn-primary hiden" data-toggle="modal" data-target="#exampleModalCenter">
    Launch demo modal
  </button>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  <script>
    $('#close').click(function() {
      window.setTimeout(() => {
        window.location.href = '/admin/dashboards/index';
      }, 2000)
    })
  </script>

  <!-- check account and create new cookie -->
  <script>
    $(document).ready(function() {
      $(".timeout").hide();

      $("#LoginForm").on("submit", (e) => {
        e.preventDefault();

        var username = (password = "");
        var flag = 1;

        username = $("#username").val();
        password = $("#password").val();

        if (username == "") {
          flag = 0;
          $("#username").addClass("setredPlace");
          $("#username").attr("placeholder", "Please fill in here").focus();
        } else {
          $("#username").attr("placeholder", "");
        }

        if (password == "") {
          flag = 0;
          $("#password").addClass("setredPlace");
          $("#password").attr("placeholder", "Please fill in here").focus();
        } else {
          $("#password").attr("placeholder", "");
        }

        if (flag == 1) {
          $.ajax({
            url: "/admin/processLogin",
            type: "POST",
            data: {
              username,
              password
            },
            success: function(results) {
              $("#ketqua").html(results.msg);

              if (results.kq == 1) {
                window.location.href = "/";
              } else {
                $("#loadding").hide();
                $("#noti").click();
              }
            },
          });
          return false;
        }
      });
    });
  </script>

  <!--     timeout -->
  <script>
    var s = 5;

    function start() {
      document.getElementById("s").innerText = s.toString();

      myVar = setTimeout(function() {
        s--;
        start();
      }, 1000);

      if (s === 0) {
        window.location.href = "/";
        clearTimeout(myVar);
      }
    }
  </script>

  <!--   Core JS Files   -->
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="/js/plugins/smooth-scrollbar.min.js"></script>
  <script>
    var win = navigator.platform.indexOf("Win") > -1;
    if (win && document.querySelector("#sidenav-scrollbar")) {
      var options = {
        damping: "0.5",
      };
      Scrollbar.init(document.querySelector("#sidenav-scrollbar"), options);
    }
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="/js/soft-ui-dashboard.min.js?v=1.0.6"></script>
</body>

</html>