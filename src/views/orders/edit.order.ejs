<div class="container-fluid py-4">
  <div class="row">

    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <form id="formOrdersEdit">
            <div class="alert-warning text-white text-min text-space-xl hiden" id="noteProducts"></div>
            <div class="row">
              <input type="text" class="form-control form-control-new hiden" id="id" value="<%=data.id%>">

              <div class="form-group col-md-6">
                <label class="form-label display-inline" for="name">Product Name <span id="nameError" class="spanError"></span></label>
                <input type="text" class="form-control form-control-new" id="name" placeholder="Ex: Iphone 14" value="<%=data.name%>" disabled>
                <span id="nameErrorText" class="spanError"></span>
              </div>

              <div class="form-group col-md-6">
                <div class="row">
                  <div class="col-md-4">
                    <label class="form-label display-inline" for="price">Price <span id="priceError" class="spanError"></span></label>
                    <input type="text" class="form-control form-control-new" id="price" placeholder="Ex: 2000" value="<%=data.price%>" disabled>
                    <span id="priceErrorText" class="spanError"></span>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label display-inline" for="quantity">Quantity<span id="discountError" class="spanError"></span></label>
                    <input type="text" class="form-control form-control-new" id="quantity" placeholder="Ex: 50" value="<%=data.quantity%>" disabled>
                    <span id="discountErrorText" class="spanError"></span>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label display-inline" for="totalPrice">Total Price<span id="totalPriceError" class="spanError"></span></label>
                    <input type="text" class="form-control form-control-none" id="totalPrice" readonly value="<%=data.totalPrice%>" disabled>
                    <span id="discountPriceErrorText" class="spanError"></span>
                  </div>
                </div>
              </div>


              <div class="form-group col-md-6">
                <label class="form-label" for="address">Address</label>
                <input type="text" class="form-control form-control-new" id="address" value="<%=data.address%>" disabled>
              </div>

              <div class="form-group col-md-6">
                <label class="form-label display-inline" for="status">Status</label>
                <select id="status" class="form-select" <%= data.isDisabledStatus ? 'disabled' : '' %>>
                  <option value="<%=data.status%>" hidden><%=data.status%></option>
                  <% for(var i=0; i < status.length; i++) { %>
                  <option value="<%=status[i]%>"><%=status[i]%></option>
                  <% } %>
                </select>
              </div>

              <div class="form-group col-md-6">
                <label class="form-label" for="username">Customer name</label>
                <input type="text" class="form-control form-control-none" id="username" value="<%=data.username%>" disabled>
              </div>

              <div class="form-group col-md-6">
              </div>

            </div>
            <!--  <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Send confirmation to email
                                </label>
                            </div>
                        </div> -->

            <div class="d-flex justify-content-between">
              <div>
                <button type="button" class="btn btn-outline-info me-2" onclick="window.history.back()"> Back </button>
                <button type="submit" class="btn bg-gradient-info text-white"> Save </button>
              </div>
              <button type="button" class="btn btn-outline-info btn-refresh" onclick="window.location.reload()">
                <i class="fas fa-sync mr-1"></i>
                Refresh
              </button>
            </div>
            <button type="button" id="clickMe" class="hiden">click</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

