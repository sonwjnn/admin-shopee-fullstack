<script>
  $(document).ready(function() {

    $('#formTypesAdd').on('submit', function(e) {
      e.preventDefault();
      var flag = 1;
      var name = $('#name').val();
      var cateName = $('#cateNames').val();


      if (name == '') {
        flag = 0;
        $("#nameError").html("(*)");
        $("#nameErrorText").html("Please fill up the infomation above");
      } else if (name.length > 50) {
        flag = 0;
        $("#nameError").html("(*)");
        $("#nameErrorText").html("Name has maximum 30 characters");

      } else {
        $("#nameError").html("");
        $("#nameErrorText").html("");
      }

      if (flag == 1) {

        $.ajax({
          url: '/admin/product-types/add',
          type: 'POST',
          data: {
            name,
            cateName
          },
          success: function(res) {
            $('#msg').html(res.msg || res.message);
            $('#popupInfo').click();
          },
          error: function(xhr, status, error) {
            console.log(xhr.responseJSON.message)
            if (xhr.responseJSON && xhr.responseJSON.message) {
              $("#msg").html(xhr.responseJSON.message);
              $("#popupInfo").click();
            }
          }
        });

      }
    })
  });
</script>


<script>
  $(document).ready(function() {

    var arr = [];
    $.ajax({
      url: '/admin/product-types/list',
      type: 'GET',
      success: function(res) {
        for (var i = 0; i < res.data.length; i++) {
          arr[i] = res.data[i].name;
        }
      }
    });

    $("#searchName").autocomplete({
      source: arr
    });


    $('#searchForm').on('submit', function(e) {
      e.preventDefault();

      var name = $('#searchName').val();

      var link = '/admin/product-types/search/' + name;
      window.location.href = link;
    })
  })
</script>

